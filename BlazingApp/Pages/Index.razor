<EditForm @Model="@registration">
    <label for="FirstName">First Name: </label>
    <InputText id="FirstName" @bind-Value="registration.FirstName"></InputText>
    <label for="LastName">Last Name:</label>
    <InputText id="LastName" @bind-Value="registration.LastName"></InputText>
    <label for="Email">Email: </label>
    <InputText id="Email" type="email" @bind-Value="registration.Email"></InputText>
    <button type="submit"></button>
</EditForm>

